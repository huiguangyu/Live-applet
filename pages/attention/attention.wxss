.page {
  background-color: #f9f9f9;
  font-size: 28rpx;
}

.page::before {
  content: "";
  display: table;
}

.box {
  width: 96%;
  margin: 20rpx auto;
}

.list {
  width: 100%;
  position: relative;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #e6e6e6;
}

.live {
  position: absolute;
  width: 48px;
  height: 48px;
  top: -10px;
  left: 4px;
}

.cover {
  width: 50%;
  height: 100px;
  border-radius: 8rpx;
}

.info {
  margin-left: 20rpx;
}

.info .title {
  font-size: 30rpx;
  width: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.info .user {
  margin-top: 40rpx;
  color: #999;
}

.info .name {
  width: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.info .people {
  margin-top: 10rpx;
  width: 100%;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
